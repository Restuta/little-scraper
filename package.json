{
  "name": "babel-webpack-package-boilerplate",

  "version": "1.0.0",

  "description": "boilerplate for building an npm package using webpack, with next-gen javascript transpilation through babel",

  "bin": {
    "babel-webpack-package-boilerplate": "./bin/main.js"
  },

  "main": "dist/index.js",

  "files": [
    "bin",
    "build",
    "src",
    "test",
    ".babelrc",
    "webpack.config.js"
  ],

  "directories": {
    "lib": "src/lib"
  },

  "scripts": {
    "build": "rimraf build && webpack",
    "prestart": "npm run build",
    "start": "node bin/main.js",
    "pretest": "npm run build",
    "test": "mocha build/test.js",
    "prepublish": "npm run build"
  },

  "repository": {
    "type": "git",
    "url": "git+https://github.com/resisttheurge/babel-webpack-package-boilerplate.git"
  },

  "keywords": [
    "babel",
    "es2015",
    "webpack",
    "mocha",
    "npm",
    "build",
    "publishing",
    "boilerplate"
  ],

  "author": "Peter Zastoupil <peterzastoupil@gmail.com>",

  "license": "ISC",

  "bugs": {
    "url": "https://github.com/resisttheurge/babel-webpack-package-boilerplate/issues"
  },

  "homepage": "https://github.com/resisttheurge/babel-webpack-package-boilerplate#readme",

  "devDependencies": {
    "babel-core": "^6.4.5",
    "babel-loader": "^6.2.1",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "mocha": "^2.4.5",
    "rimraf": "^2.5.1",
    "webpack": "^1.12.12"
  }

}
