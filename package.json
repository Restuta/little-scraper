{
  "name": "little-scraper",
  "version": "0.0.1",
  "description": "Little Node Scraper with simple by powerful async flow control goodness",
  "bin": {
    "little-scraper": "./bin/index.js"
  },
  "yarn": "./dist/lib.js",
  "files": [
    "bin",
    "config",
    "dist",
    "src",
    ".babelrc",
    "README.md",
    "webpack.config.js"
  ],
  "directories": {
    "bin": "./bin",
    "config": "./config",
    "dist": "./dist",
    "src": "./src",
    "lib": "./src/lib"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "cross-env NODE_ENV=PROD npm run style && webpack --progress --colors",
    "build:watch": "npm run clean && cross-env NODE_ENV=DEV webpack --progress --colors --watch",
    "dev": "nodemon --watch dist ./dist/index.js",
    "test": "cross-env NODE_ENV=TEST mocha-webpack",
    "test:watch": "cross-env NODE_ENV=TEST mocha-webpack --watch",
    "prestart": "npm run clean && npm run build",
    "prepublish": "npm run build",
    "start": "node ./bin/index.js",
    "style": "standard --verbose | snazzy",
    "style:fix": "standard --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Restuta/little-scraper.git"
  },
  "keywords": [
    "node",
    "nodejs",
    "scraper"
  ],
  "author": "Anton Vynogradenko <restuta8@gmail.com> (http://restuta.me)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Restuta/little-scraper/issues"
  },
  "homepage": "https://github.com/Restuta/little-scraper#readme",
  "devDependencies": {
    "babel-core": "^6.22.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-polyfill": "^6.22.0",
    "babel-preset-env": "^1.1.8",
    "babel-preset-stage-0": "^6.22.0",
    "cross-env": "^3.1.4",
    "jsverify": "^0.7.4",
    "mocha": "^3.2.0",
    "mocha-webpack": "^0.7.0",
    "source-map-support": "^0.4.11",
    "standard": "^8.6.0",
    "webpack": "^2.2.1",
    "nodemon": "^1.11.0",
    "rimraf": "^2.6.0",
    "snazzy": "^6.0.0"
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "DEV",
      "PROD",
      "TEST"
    ]
  },
  "dependencies": {
  }
}
